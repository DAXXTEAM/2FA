{
  "name": "Telegram 2FA Bot",
  "description": "A simple Telegram bot for 2FA verification.",
  "repository": "https://github.com/DAXXTEAM/2FA",
  "logo": "https://avatars.githubusercontent.com/u/9919",
  "keywords": ["telegram", "bot", "2fa", "security"],
  "buildpacks": [
    { "url": "heroku/python" }
  ],
  "env": {
    "API_ID": {
      "description": "Your Telegram API ID",
      "required": true
    },
    "API_HASH": {
      "description": "Your Telegram API Hash",
      "required": true
    },
    "BOT_TOKEN": {
      "description": "Your Telegram bot token",
      "required": true
    }
  }
}
